<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="center"
    tools:context="info.summoners.app.rest.lol.summonersApp.ShowLeaguesActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:id="@+id/textViewSoloQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/loading"
                android:textAlignment="center"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/textViewSoloQTier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSoloQ"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/textViewSoloQLeagueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSoloQTier"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSoloQLeaguePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSoloQLeagueName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#ff000000" />

            <Button
                android:id="@+id/buttonOtherLeagues"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSoloQLeaguePoints"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:onClick="onClickOtherLeagues"
                android:text="@string/show_other_leagues"
                android:textColor="#ff000000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewOtherLeagues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonOtherLeagues"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/other_leagues"
                android:textAlignment="center"
                android:textColor="#ff000000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewOtherLeaguesInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewOtherLeagues"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff000000"
                android:visibility="invisible" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
